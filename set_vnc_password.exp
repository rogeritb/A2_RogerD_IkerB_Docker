#!/usr/bin/expect -f
# Script per configurar la contrasenya VNC

set user [lindex $argv 0]
set password [lindex $argv 1]

spawn sudo -u $user vncpasswd /home/$user/.vnc/passwd
expect "Password:"
send "$password\r"
expect "Verify:"
send "$password\r"
expect "Would you like to enter a view-only password (y/n)?"
send "n\r"
expect eof